<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" level="DEBUG" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="STDOUT2" level="DEBUG" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.pe.pcm" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT2"/>
    </root>
</configuration>